# Base
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@host:5432/db?sslmode=require
SHADOW_DATABASE_URL=postgresql://user:password@host:5432/db_shadow?sslmode=require

# Entra (JWT validation)
ENTRA_API_AUDIENCE=api://your-app-id
ENTRA_AUTHORITY_HOST=login.microsoftonline.com
ENTRA_JWKS_TENANT=common

# Power BI (client credentials)
PBI_TENANT_ID=your-tenant-id
PBI_CLIENT_ID=your-client-id
PBI_CLIENT_SECRET=your-client-secret
PBI_ALLOW_EMBED_WITHOUT_RLS=false
PBI_SYNC_JOB_TOKEN=

# Bootstrap (optional)
BOOTSTRAP_TOKEN=

# Hardening
CORS_ORIGINS=http://localhost:5173
CORS_CREDENTIALS=false
ENABLE_CSP=false
CSP_FRAME_SRC=
CSP_CONNECT_SRC=
RATE_LIMIT_ADMIN_WINDOW_MS=60000
RATE_LIMIT_ADMIN_MAX=60
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=20
TRUST_PROXY=false
DB_SSL_ALLOW_INVALID=false
